<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.crossover.medicalconference">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CALENDAR"/>
    <uses-permission android:name="android.permission.WRITE_CALENDAR"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activites.LoginActivity"
            android:label="Medical Conference">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activites.DoctorMain"
            android:label="Overview"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activites.RegisterActivity" />
        <activity
            android:name=".Activites.TopicActivity"
            android:label="Topic Details" />
        <activity
            android:name=".Activites.InviteActivity"
            android:label="Invite Details" />
        <activity
            android:name=".Activites.AdminPanel"
            android:label="@string/title_activity_admin_panel"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activites.ConferenceActivityAdmin"
            android:label="Conference Details" />
        <activity
            android:name=".Activites.InviteActivityAdmin"
            android:label="Invite Doctors" />
        <activity
            android:name=".Activites.AcceptedDoctorsActivity"
            android:label="Accepted Invites" />
    </application>

</manifest>